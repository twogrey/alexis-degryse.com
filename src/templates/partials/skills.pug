mixin skill(icon, title, text, linkFramework)
	article(class="skills__item")
		.row.align-center
			div(class="col-auto mb md:col-12")
				svg(class="icon skills__icon mx-a", aria-hidden="true")
					use(xlink:href="#icon-"+icon)
			div(class="col md:col-12 mb md:mt-0.25")
				h3.fs-2.lh-sm.text-serif.fw-bold= title
		p.pos-relative= text 
			if(linkFramework)
				|  
				a(href="https://github.com/twogrey/baCSSet", target="_blank", rel="noopener noreferrer", aria-describedby="new-window") Take a look
				svg(class="icon", aria-hidden="true")
					use(xlink:href="#icon-new-tab")
				| .

