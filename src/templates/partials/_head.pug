meta(property="og:image:height", content="1200")
meta(property="og:type", content="website")
block og
	meta(property="og:url", content="https://alexis-degryse.com")
	meta(property="og:title", content="Alexis Degryse - Conception web et accessibilité numérique")
	meta(property="og:description", content="Je vous accompagne dans la création de votre site web et votre démarche de prise en compte de l’accessibilité numérique.")

